@section Scripts {
    <script>
    $(document).ready(function() {
        loadUsers();
    });

    function loadUsers() {
        const role = $('#roleFilter').val();
        const status = $('#statusFilter').val();

        $('#userTableBody').html('<tr><td colspan="8" style="text-align:center;">Memuat data...</td></tr>');

        $.get('@Url.Action("GetUsers", "UserManagement")', { role: role, isActive: status }, function(response) {
            if (response.success) {
                const tbody = $('#userTableBody');
                tbody.empty();
                
                if (response.data.length === 0) {
                     tbody.html('<tr><td colspan="8" style="text-align:center; color: #64748b;">Tidak ada data user.</td></tr>');
                     return;
                }

                response.data.forEach((item, index) => {
                    const statusBadge = item.isActive 
                        ? '<span class="badge badge-active">Active</span>' 
                        : '<span class="badge badge-inactive">Inactive</span>';

                    tbody.append(`
                        <tr>
                            <td class="text-center" style="color: #64748b;">${index + 1}</td>
                            <td style="font-weight:bold; color: #e2e8f0;">${item.username}</td>
                            <td style="color: #cbd5e1;">${item.fullName}</td>
                            <td style="color: #94a3b8;">${item.email}</td>
                            <td style="color: #818cf8;">${item.role}</td>
                            <td style="color: #94a3b8;">${item.department || '-'}</td>
                            <td class="text-center">${statusBadge}</td>
                            <td class="text-right">
                                <button onclick="editUser(${item.id})" class="btn-icon btn-indigo" title="Edit user" style="margin-right: 0.5rem;">‚úèÔ∏è</button>
                                <button onclick="deleteUser(${item.id}, '${item.username}')" class="btn-icon btn-red" title="Hapus user">üóëÔ∏è</button>
                            </td>
                        </tr>
                    `);
                });
            }
        });
    }

    function showCreateModal() {
        $('#userId').val('');
        $('#username').val('').prop('disabled', false);
        $('#fullName').val('');
        $('#email').val('');
        $('#password').val('').prop('required', true);
        $('#passwordHint').text('');
        $('#role').val('User');
        $('#department').val('');
        $('#statusGroup').hide();
        
        $('#modalTitle').text('Tambah User Baru');
        $('#btnSubmit').text('Simpan');
        
        $('#userModal').fadeIn(200);
    }

    function editUser(id) {
        $.get('@Url.Action("GetUser", "UserManagement")', { id: id }, function(response) {
            if (response.success) {
                const item = response.data;
                
                $('#userId').val(item.id);
                $('#username').val(item.username);
                $('#fullName').val(item.fullName);
                $('#email').val(item.email);
                $('#password').val('').prop('required', false); // Password not required on edit
                $('#passwordHint').text('(Kosongkan jika tidak ingin mengubah password)');
                $('#role').val(item.role);
                $('#department').val(item.department);
                
                $('#isActive').val(item.isActive.toString());
                $('#statusGroup').show(); // Show status dropdown solely for edit
                
                $('#modalTitle').text('Edit User');
                $('#btnSubmit').text('Update');
                $('#userModal').fadeIn(200);
            } else {
                alert('Gagal memuat data user');
            }
        });
    }

    function closeModal() {
        $('#userModal').fadeOut(200);
    }

    $('#userForm').submit(function(e) {
        e.preventDefault();
        
        var formData = new FormData(this);
        const userId = $('#userId').val();
        const isEdit = userId !== '';
        
        const url = isEdit 
            ? '@Url.Action("UpdateUser", "UserManagement")' 
            : '@Url.Action("CreateUser", "UserManagement")';

        $.ajax({
            url: url,
            type: 'POST',
            data: formData,
            processData: false, // Important for FormData
            contentType: false, // Important for FormData
            success: function(response) {
                if (response.success) {
                    closeModal();
                    loadUsers();
                } else {
                    alert('Gagal menyimpan: ' + (response.message || 'Unknown error'));
                }
            },
            error: function(xhr, status, error) {
                alert('Error: ' + error);
            }
        });
    });

    function deleteUser(id, username) {
        if(confirm(`Yakin ingin menghapus user '${username}'?`)) {
            $.post('@Url.Action("DeleteUser", "UserManagement")', { id: id }, function(response) {
                if (response.success) {
                    loadUsers();
                } else {
                    alert('Gagal menghapus: ' + response.message);
                }
            });
        }
    }

    // Import/Export Logic
    function toggleImportExportDropdown() {
        $('#importExportMenu').fadeToggle(200);
    }

    $(document).click(function(e) {
        if (!$(e.target).closest('.import-export-dropdown').length) {
            $('#importExportMenu').fadeOut(200);
        }
    });

    function exportData() {
        const role = $('#roleFilter').val();
        const status = $('#statusFilter').val();
        let url = '@Url.Action("ExportToExcel", "UserManagement")?';
        if(role) url += `role=${role}&`;
        if(status) url += `isActive=${status}`;
        
        window.location.href = url;
        $('#importExportMenu').fadeOut(200);
    }

     function handleImport(input) {
        const file = input.files[0];
        if (!file) return;

        const formData = new FormData();
        formData.append('file', file);

        $.ajax({
            url: '@Url.Action("ImportFromExcel", "UserManagement")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function(response) {
                if (response.success) {
                    alert(response.message);
                    loadUsers();
                } else {
                    alert('Import gagal: ' + response.message);
                }
                input.value = '';
            },
            error: function(xhr, status, error) {
                alert('Error import: ' + error);
                input.value = '';
            }
        });

        $('#importExportMenu').fadeOut(200);
    }
    </script>
}
