@{
    ViewData["Title"] = "Manajemen User";
}

<div class="container-fluid" style="padding: 2rem 3rem;">
    <div class="dark-card">
        <!-- Header Section -->
        <div class="header-section">
            <div class="title-block">
                <div class="icon-wrapper">
                    <span style="font-size: 2rem;">üë•</span>
                </div>
                <div>
                    <h1 class="page-title">Manajemen User</h1>
                    <p class="subtitle">Kelola akun pengguna, role, dan hak akses sistem</p>
                </div>
            </div>
            <div style="display: flex; gap: 0.75rem; align-items: center;">
                <!-- Import/Export Dropdown -->
                <div class="import-export-dropdown">
                    <button onclick="toggleImportExportDropdown()" class="btn-secondary" style="display: inline-flex; align-items: center; gap: 0.5rem;">
                        <i class="ph-download-simple-bold"></i> Import/Export
                        <i class="ph-caret-down-bold" style="font-size: 0.8rem;"></i>
                    </button>
                    <div id="importExportMenu" class="dropdown-menu" style="display: none;">
                        <a href="@Url.Action("DownloadTemplate", "UserManagement")" class="dropdown-item">
                            <i class="ph-file-arrow-down-bold"></i> Download Template
                        </a>
                        <button onclick="document.getElementById('importFile').click()" class="dropdown-item">
                            <i class="ph-upload-bold"></i> Import Excel
                        </button>
                        <button onclick="exportData()" class="dropdown-item" id="btnExport">
                            <i class="ph-file-xls-bold"></i> Export Excel
                        </button>
                    </div>
                </div>
                <input type="file" id="importFile" accept=".xlsx,.xls" style="display: none;" onchange="handleImport(this)">
                
                <button onclick="showCreateModal()" class="btn-primary">
                    <i class="ph-plus-bold"></i> Tambah User
                </button>
            </div>
        </div>

        <!-- Filter Section -->
        <div class="filter-section" style="display: flex; gap: 1rem;">
            <div class="form-group" style="min-width: 200px;">
                <label class="form-label">Filter Role</label>
                <select id="roleFilter" class="form-select" onchange="loadUsers()">
                    <option value="">- Semua Role -</option>
                    <option value="Admin">Admin</option>
                    <option value="Supervisor">Supervisor</option>
                    <option value="User">User</option>
                    <option value="Operator">Operator</option>
                    <option value="Maintenance">Maintenance</option>
                </select>
            </div>
             <div class="form-group" style="min-width: 200px;">
                <label class="form-label">Status</label>
                <select id="statusFilter" class="form-select" onchange="loadUsers()">
                    <option value="">- Semua Status -</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="custom-table">
                <thead>
                    <tr>
                        <th width="5%" class="text-center">NO</th>
                        <th width="15%">USERNAME</th>
                        <th width="20%">FULL NAME</th>
                        <th width="20%">EMAIL</th>
                        <th width="10%">ROLE</th>
                        <th width="15%">DEPARTMENT</th>
                        <th width="10%" class="text-center">STATUS</th>
                        <th width="5%" class="text-right">AKSI</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    <tr>
                        <td colspan="8" style="text-align:center;">Memuat data user...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal Create/Edit User -->
<div id="userModal" class="modal-backdrop" style="display: none;">
    <div class="modal-content">
        <div class="modal-header-row">
            <h2 class="modal-title" id="modalTitle">Tambah User Baru</h2>
            <button type="button" class="btn-close-modal" onclick="closeModal()">
                <i class="ph-x-bold"></i>
            </button>
        </div>

        <form id="userForm" class="modal-form">
            <input type="hidden" id="userId" name="id">
            
            <div class="form-row" style="display: flex; gap: 1rem;">
                <div class="form-group" style="flex: 1;">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" name="username" class="form-input" required autocomplete="off">
                </div>
                <div class="form-group" style="flex: 1;">
                    <label class="form-label">Full Name</label>
                    <input type="text" id="fullName" name="fullName" class="form-input" required autocomplete="off">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Email</label>
                    <input type="email" id="email" name="email" class="form-input" required autocomplete="off">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label">Password <span id="passwordHint" style="font-weight: normal; font-size: 0.8em; color: #94a3b8;"></span></label>
                    <input type="password" id="password" name="password" class="form-input" autocomplete="new-password">
                </div>
            </div>

            <div class="form-row" style="display: flex; gap: 1rem;">
                <div class="form-group" style="flex: 1;">
                    <label class="form-label">Role</label>
                    <select id="role" name="role" class="form-select" required>
                        <option value="User">User</option>
                        <option value="Admin">Admin</option>
                        <option value="Supervisor">Supervisor</option>
                        <option value="Operator">Operator</option>
                        <option value="Maintenance">Maintenance</option>
                    </select>
                </div>
                <div class="form-group" style="flex: 1;">
                    <label class="form-label">Department</label>
                    <input type="text" id="department" name="department" class="form-input" placeholder="e.g. Production">
                </div>
            </div>

            <div class="form-group" id="statusGroup" style="display: none;">
                <label class="form-label">Account Status</label>
                <select id="isActive" name="isActive" class="form-select">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>

            <div class="modal-actions">
                <button type="button" onclick="closeModal()" class="btn-secondary">Batal</button>
                <button type="submit" class="btn-primary" id="btnSubmit">Simpan</button>
            </div>
        </form>
    </div>
</div>

