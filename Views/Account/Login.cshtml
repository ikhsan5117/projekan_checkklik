            0% { width: 0; }
            30% { width: 200px; }
            100% { width: 0; }
        }

        @@keyframes shining {
            0% { width: 0; }
            50% { width: 50px; }
            100% { width: 0; }
        }

        @@keyframes shooting {
            0% { transform: translateX(0); }
            100% { transform: translateX(500px); }
