@model AMRVI.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Access Control";
    Layout = null; // Standalone layout for login

    // Helper function to generate random box shadows for stars
    string MultipleBoxShadows(int n)
    {
        var random = new Random();
        var shadows = new List<string>();
        for (int i = 0; i < n; i++)
        {
            shadows.Add($"{random.Next(0, 3000)}px {random.Next(0, 3000)}px #FFF");
        }
        return string.Join(", ", shadows);
    }

    var shadowsSmall = MultipleBoxShadows(1000);
    var shadowsMedium = MultipleBoxShadows(300);
    var shadowsBig = MultipleBoxShadows(150);
}

