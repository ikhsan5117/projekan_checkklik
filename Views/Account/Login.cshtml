            top: calc(50% - 350px); left: calc(50% - 450px); animation-delay: 1000ms; z-index: 1;
            background: linear-gradient(-45deg, rgba(95, 145, 255, 1), rgba(0, 0, 255, 0));
            filter: drop-shadow(0 0 10px rgba(105, 155, 255, 1));
