        /* Shooting Stars Animation */
        .night {
            position: fixed;
            width: 100%;
            height: 100%;
            transform: rotate(45deg);
            top: 0;
            left: 0;
            z-index: 1;
        }

        .shooting_star {
            position: absolute;
            left: 50%;
            top: 50%;
            height: 3px;
            background: linear-gradient(-45deg, rgba(95, 145, 255, 1), rgba(0, 0, 255, 0));
            border-radius: 999px;
            filter: drop-shadow(0 0 10px rgba(105, 155, 255, 1));
            animation:
                tail 3000ms ease-in-out infinite,
                shooting 3000ms ease-in-out infinite;
        }

        .shooting_star::before,
        .shooting_star::after {
            content: '';
            position: absolute;
            top: calc(50% - 1.5px);
            right: 0;
            height: 3px;
            background: linear-gradient(-45deg, rgba(0, 0, 255, 0), rgba(95, 145, 255, 1), rgba(0, 0, 255, 0));
            border-radius: 100%;
            animation: shining 3000ms ease-in-out infinite;
        }

        .shooting_star::before {
            transform: translateX(50%) rotateZ(45deg);
        }

        .shooting_star::after {
            transform: translateX(50%) rotateZ(-45deg);
        }

        /* Random positions and delays for each shooting star */
        /* Stars behind card (z-index: 1) */
