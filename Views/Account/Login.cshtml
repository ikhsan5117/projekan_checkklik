@model AMRVI.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Access Control";
    Layout = null; // Standalone layout for login
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Daily Machine Checklist RVI System</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://unpkg.com/@@phosphor-icons/web@@2.0.3/src/regular/style.css">
    <link rel="stylesheet" href="https://unpkg.com/@@phosphor-icons/web@@2.0.3/src/fill/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&family=Sora:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
    
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%);
            color: #f1f5f9;
            font-family: 'Outfit', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            overflow: hidden;
            position: relative;
        }

        /* Animated Gradient Orbs */
        body::before {
            content: '';
            position: absolute;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(59, 130, 246, 0.3), transparent 70%);
            border-radius: 50%;
            top: -200px;
            left: -200px;
            filter: blur(80px);
            animation: float1 20s ease-in-out infinite;
            z-index: 0;
        }

        body::after {
            content: '';
            position: absolute;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(139, 92, 246, 0.25), transparent 70%);
            border-radius: 50%;
            bottom: -150px;
            right: -150px;
            filter: blur(80px);
            animation: float2 18s ease-in-out infinite;
            z-index: 0;
        }

        /* Additional Orbs */
        .gradient-orb-1 {
            position: absolute;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(20, 184, 166, 0.2), transparent 70%);
            border-radius: 50%;
            top: 50%;
            left: 10%;
            filter: blur(70px);
            animation: float3 25s ease-in-out infinite;
            z-index: 0;
        }

        .gradient-orb-2 {
            position: absolute;
            width: 450px;
            height: 450px;
            background: radial-gradient(circle, rgba(34, 211, 238, 0.2), transparent 70%);
            border-radius: 50%;
            top: 20%;
            right: 15%;
            filter: blur(75px);
            animation: float4 22s ease-in-out infinite;
            z-index: 0;
        }

        .gradient-orb-3 {
            position: absolute;
            width: 350px;
            height: 350px;
            background: radial-gradient(circle, rgba(99, 102, 241, 0.25), transparent 70%);
            border-radius: 50%;
            bottom: 30%;
            left: 50%;
            filter: blur(65px);
            animation: float5 28s ease-in-out infinite;
            z-index: 0;
        }

        @@keyframes float1 {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(100px, -50px) scale(1.1); }
            66% { transform: translate(-50px, 100px) scale(0.9); }
        }

        @@keyframes float2 {
            0%, 100% { transform: translate(0, 0) scale(1); }
            33% { transform: translate(-80px, 60px) scale(1.15); }
            66% { transform: translate(60px, -80px) scale(0.95); }
        }

        @@keyframes float3 {
            0%, 100% { transform: translate(0, 0) scale(1); }
            50% { transform: translate(120px, -100px) scale(1.2); }
        }

        @@keyframes float4 {
            0%, 100% { transform: translate(0, 0) scale(1); }
            50% { transform: translate(-100px, 80px) scale(1.1); }
        }

        @@keyframes float5 {
            0%, 100% { transform: translate(0, 0) scale(1); }
            50% { transform: translate(80px, 120px) scale(1.15); }
        }

        /* --- PREMIUM LOGIN AESTHETICS --- */
        .login-card {
            background: rgba(15, 23, 42, 0.65);
            backdrop-filter: blur(40px) saturate(180%);
            -webkit-backdrop-filter: blur(40px) saturate(180%);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-top: 1px solid rgba(255, 255, 255, 0.15); /* Top highlight */
            border-radius: 32px;
            padding: 3.5rem;
            width: 100%;
            max-width: 460px;
            box-shadow: 
                0 40px 80px rgba(0, 0, 0, 0.7),
                0 0 0 1px rgba(255, 255, 255, 0.05),
                inset 0 0 20px rgba(255, 255, 255, 0.02);
            position: relative;
            z-index: 10;
            overflow: hidden;
            animation: cardEntry 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        /* Shine effect passing through card */
        .login-card::before {
            content: '';
            position: absolute;
            top: 0; left: -100%;
            width: 100%; height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.03), transparent);
            transform: skewX(-25deg);
            animation: shineCard 8s infinite ease-in-out;
            pointer-events: none;
        }

        @@keyframes shineCard {
            0%, 80% { left: -100%; }
            100% { left: 200%; }
        }

        @@keyframes cardEntry {
            from { opacity: 0; transform: translateY(40px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }

        .brand-logo {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 1.5rem;
            margin-bottom: 3rem;
            position: relative;
        }

        .logo-icon {
            width: 72px;
            height: 72px;
            background: linear-gradient(135deg, rgba(129, 140, 248, 0.2), rgba(34, 211, 238, 0.1));
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 
                0 0 40px rgba(129, 140, 248, 0.2),
                inset 0 0 20px rgba(255, 255, 255, 0.05);
            transition: all 0.5s ease;
            backdrop-filter: blur(10px);
        }

        .login-card:hover .logo-icon {
            transform: rotateY(180deg);
            background: linear-gradient(135deg, rgba(129, 140, 248, 0.3), rgba(34, 211, 238, 0.2));
            box-shadow: 0 0 50px rgba(129, 140, 248, 0.4);
        }

        .logo-icon svg {
            width: 40px;
            height: 40px;
            fill: #f8fafc;
            filter: drop-shadow(0 0 10px rgba(255,255,255,0.5));
            transition: all 0.5s ease;
        }

        .login-card:hover .logo-icon svg {
            transform: rotateY(-180deg); /* Counter rotate content */
        }

        .brand-logo h2 {
            margin: 0;
            font-weight: 800;
            font-family: 'Outfit', sans-serif;
            font-size: 2rem;
            text-align: center;
            background: linear-gradient(to right, #fff 20%, #818cf8 50%, #22d3ee 80%);
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: -0.5px;
        }

        .form-group {
            margin-bottom: 1.8rem;
            position: relative;
        }

        .form-control {
            background: rgba(15, 23, 42, 0.6) !important;
            border: 1px solid rgba(255, 255, 255, 0.08) !important;
            color: #f8fafc !important;
            border-radius: 16px;
            padding: 1.1rem 1.1rem 1.1rem 3.5rem;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            width: 100%;
            font-family: 'Outfit', sans-serif;
            box-shadow: inset 0 2px 4px rgba(0,0,0,0.2);
        }

        .form-control:hover {
            background: rgba(15, 23, 42, 0.8) !important;
            border-color: rgba(255, 255, 255, 0.15) !important;
        }

        .form-control:focus {
            background: rgba(15, 23, 42, 0.9) !important;
            border-color: #818cf8 !important;
            box-shadow: 
                0 0 0 4px rgba(129, 140, 248, 0.15),
                0 0 30px rgba(129, 140, 248, 0.1);
            transform: translateY(-2px);
        }

        .input-icon {
            position: absolute;
            left: 1.2rem;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            font-size: 1.4rem;
            transition: all 0.3s ease;
            pointer-events: none;
        }

        .form-control:focus ~ .input-icon {
            color: #22d3ee;
            filter: drop-shadow(0 0 8px rgba(34, 211, 238, 0.5));
        }

        /* Modern Select styling */
        select.form-control {
            appearance: none;
            cursor: pointer;
        }
        
        .form-group:has(select) {
            position: relative;
        }
        
        .form-group:has(select)::after {
            content: 'â–¼';
            font-size: 0.7rem;
            color: #64748b;
            position: absolute;
            right: 1.2rem;
            top: 50%;
            transform: translateY(-50%);
            pointer-events: none;
            transition: color 0.3s;
        }

        .form-group:has(select):hover::after {
            color: #94a3b8;
        }

        .btn-login {
            background: linear-gradient(135deg, #4f46e5, #06b6d4);
            border: none;
            color: white;
            padding: 1.1rem;
            width: 100%;
            border-radius: 16px;
            font-weight: 700;
            font-size: 1.05rem;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: 
                0 4px 20px rgba(79, 70, 229, 0.3),
                inset 0 1px 0 rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.8rem;
            font-family: 'Outfit', sans-serif;
            position: relative;
            overflow: hidden;
            margin-top: 1rem;
        }

        .btn-login::before {
            content: '';
            position: absolute;
            top: 0; left: -100%;
            width: 100%; height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: 0.5s;
        }

        .btn-login:hover {
            transform: translateY(-3px) scale(1.02);
            box-shadow: 
                0 10px 30px rgba(79, 70, 229, 0.5),
                0 0 50px rgba(6, 182, 212, 0.3);
            background: linear-gradient(135deg, #4338ca, #0891b2);
        }

        .btn-login:hover::before {
            left: 100%;
        }

        .btn-login:active {
            transform: translateY(1px) scale(0.98);
        }

        .login-footer {
            margin-top: 2.5rem;
            text-align: center;
            color: #475569;
            font-size: 0.8rem;
            font-weight: 500;
            letter-spacing: 0.5px;
            opacity: 0.7;
            transition: opacity 0.3s;
        }

        .login-footer:hover {
            opacity: 1;
            color: #64748b;
        }
    </style>
</head>
<body>

    <!-- Gradient Orbs -->
    <div class="gradient-orb-1"></div>
    <div class="gradient-orb-2"></div>
    <div class="gradient-orb-3"></div>


    <div class="login-card">
        <div class="brand-logo">
            <div class="logo-icon">
                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="white">
                    <path d="M234-276q51-39 114-61.5T480-360q69 0 132 22.5T726-276q35-41 54.5-93T800-480q0-133-93.5-226.5T480-800q-133 0-226.5 93.5T160-480q0 59 19.5 111t54.5 93Zm246-164q-59 0-99.5-40.5T340-580q0-59 40.5-99.5T480-720q59 0 99.5 40.5T620-580q0 59-40.5 99.5T480-440Zm0 360q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q53 0 100-15.5t86-44.5q-39-29-86-44.5T480-280q-53 0-100 15.5T294-220q39 29 86 44.5T480-160Zm0-360q26 0 43-17t17-43q0-26-17-43t-43-17q-26 0-43 17t-17 43q0 26 17 43t43 17Zm0-60Zm0 360Z"/>
                </svg>
            </div>
            <h2>LOGIN</h2>
        </div>

        <form asp-action="Login" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
            <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 1rem; text-align: center;"></div>

            <div class="form-group">
                <select asp-for="Plant" class="form-control" style="padding-left: 3.2rem;">
                    <option value="" disabled selected>-- Select Plant --</option>
                    <option value="RVI">RVI (Rubber Vibration Isolator)</option>
                    <option value="BTR">BTR (Bridgestone)</option>
                    <option value="HOSE">HOSE</option>
                    <option value="MOLDED">MOLDED</option>
                    <option value="MIXING">MIXING</option>
                </select>
                <i class="ph ph-factory input-icon"></i>
                <span asp-validation-for="Plant" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Username" autocomplete="username" />
                <i class="ph ph-user input-icon"></i>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" autocomplete="current-password" />
                <i class="ph ph-lock-key input-icon"></i>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="remember-me">
                <input asp-for="RememberMe" type="checkbox" id="rememberMe" />
                <span class="checkbox-custom"></span>
                <label for="rememberMe">Keep me signed in</label>
            </div>

            <button type="submit" class="btn-login">
                <span>Access Dashboard</span>
                <i class="ph ph-arrow-right"></i>
            </button>
        </form>

        <div class="login-footer">
            <p>&copy; @DateTime.Now.Year Daily Machine Checklist RVI System. <br/>Authorized Personnel Only.</p>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const plantSelect = document.getElementById('Plant');
            const usernameInput = document.getElementById('Username');
            const passwordInput = document.getElementById('Password');

            const credentialHints = {
                'RVI': { user: 'AdminRVI / UserRVI', pass: 'RVI123' },
                'BTR': { user: 'AdminBTR / UserBTR', pass: 'BTR123' },
                'HOSE': { user: 'AdminHOSE / UserHOSE', pass: 'HOSE123' },
                'MOLDED': { user: 'AdminMolded / UserMolded', pass: 'Molded123' },
                'MIXING': { user: 'AdminMixing / UserMixing', pass: 'Mixing123' }
            };

            function updatePlaceholders() {
                const plant = plantSelect.value;
                const hint = credentialHints[plant];
                if (hint) {
                    usernameInput.placeholder = `Username (${hint.user})`;
                    passwordInput.placeholder = `Password (${hint.pass})`;
                } else {
                    usernameInput.placeholder = "Username";
                    passwordInput.placeholder = "Password";
                }
            }

            plantSelect.addEventListener('change', updatePlaceholders);
            
            // Initial call
            updatePlaceholders();
        });
    </script>
</body>
</html>
