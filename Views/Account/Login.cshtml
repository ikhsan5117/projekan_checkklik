            align-items: center;
            justify-content: center;
            margin: 0;
            overflow: hidden;
            position: relative;
        }

        /* Animated Gradient Orbs */
        body::before {
            content: '';
            position: absolute;
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(59, 130, 246, 0.3), transparent 70%);
            border-radius: 50%;
            top: -200px;
            left: -200px;
            filter: blur(80px);
            animation: float1 20s ease-in-out infinite;
            z-index: 0;
        }

        body::after {
            content: '';
            position: absolute;
            width: 500px;
            height: 500px;
            background: radial-gradient(circle, rgba(139, 92, 246, 0.25), transparent 70%);
            border-radius: 50%;
            bottom: -150px;
            right: -150px;
            filter: blur(80px);
            animation: float2 18s ease-in-out infinite;
            z-index: 0;
        }

        /* Additional Orbs */
        .gradient-orb-1 {
            position: absolute;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(20, 184, 166, 0.2), transparent 70%);
            border-radius: 50%;
            top: 50%;
            left: 10%;
            filter: blur(70px);
            animation: float3 25s ease-in-out infinite;
            z-index: 0;
        }

        .gradient-orb-2 {
            position: absolute;
            width: 450px;
            height: 450px;
            background: radial-gradient(circle, rgba(34, 211, 238, 0.2), transparent 70%);
            border-radius: 50%;
            top: 20%;
            right: 15%;
            filter: blur(75px);
            animation: float4 22s ease-in-out infinite;
            z-index: 0;
        }

        .gradient-orb-3 {
            position: absolute;
            width: 350px;
