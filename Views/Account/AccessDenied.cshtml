@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="selection-container">
    <div class="selection-header animate-fade-in">
        <div class="icon-wrapper red" style="margin: 0 auto 2rem; width: 80px; height: 80px; font-size: 2.5rem;">
            <i class="ph-prohibit"></i>
        </div>
        <h1 class="welcome-text">Akses <span class="user-name">Ditolak</span></h1>
        <p class="subtitle">Maaf, Anda tidak memiliki ijin untuk mengakses halaman ini.</p>
        
        <div style="margin-top: 3rem;">
            <a href="@Url.Action("Selection", "Home")" class="horizontal-card blue" style="max-width: 400px; margin: 0 auto; padding: 1rem 1.5rem;">
                <div class="card-icon" style="width: 40px; height: 40px; font-size: 1.2rem;">
                    <i class="ph-house"></i>
                </div>
                <div class="card-body">
                    <h3 style="font-size: 1rem;">Kembali ke Utama</h3>
                    <p style="font-size: 0.8rem;">Ke halaman pilihan layanan</p>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    /* Reuse styles from selection page */
    .selection-container {
        min-height: calc(100vh - 150px);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }
</style>
