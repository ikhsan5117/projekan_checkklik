@{
    ViewData["Title"] = "Analytics Henkaten";
}

@section Styles {
    <link rel="stylesheet" href="~/css/henkaten-analytics.css" asp-append-version="true" />
}

<div class="analytics-container">
    <!-- Header Section -->
    <!-- Page Header & Filter Section -->
    <header class="page-header-analytics">
        <div class="header-left">
            <h1 class="page-title">Analytics <span class="gradient-text">Problem Henkaten</span></h1>
            <p class="page-subtitle">Visualisasi Data Temuan dan Performa Perbaikan</p>
            <div id="activeFiltersContainer" class="active-filters-list"></div>
        </div>
        
        <div class="header-right">
            <div class="filter-group-analytics">
                <input type="date" id="filterDate">
                
                <button id="btnResetFilter" class="btn-reset-analytics" title="Reset ke Hari Ini">
                    <i class="ph-arrows-counter-clockwise"></i> Reset
                </button>

                <div class="header-divider"></div>

                <a href="@Url.Action("Index", "Henkaten")" class="btn-list-analytics">
                    <i class="ph-list-bullets"></i> List Temuan
                </a>
            </div>
        </div>
    </header>

    <div class="analytics-dashboard-wrapper">
        <!-- Sidebar Stats (Left) -->
        <aside class="analytics-sidebar">
            <div class="sidebar-stat-card card-total">
                <div class="stat-icon" style="background: rgba(59, 130, 246, 0.1); color: #60a5fa;">
                    <i class="ph-database"></i>
                </div>
                <div class="stat-info">
                    <div class="stat-label">Total Temuan</div>
                    <div class="stat-value" id="totalTemuan">0</div>
                    <div class="stat-desc" id="totalDesc">Semua data terinput</div>
                </div>
            </div>

            <div class="sidebar-stat-card card-pending">
                <div class="stat-icon" style="background: rgba(245, 158, 11, 0.1); color: #fbbf24;">
                    <i class="ph-clock"></i>
                </div>
                <div class="stat-info">
                    <div class="stat-label">Pending</div>
                    <div class="stat-value" id="pendingTemuan">0</div>
                    <div class="stat-desc" id="pendingDesc">Menunggu perbaikan</div>
                </div>
            </div>

            <div class="sidebar-stat-card card-selesai">
                <div class="stat-icon" style="background: rgba(52, 211, 153, 0.1); color: #34d399;">
                    <i class="ph-check-circle"></i>
                </div>
                <div class="stat-info">
                    <div class="stat-label">Selesai</div>
                    <div class="stat-value" id="selesaiTemuan">0</div>
                    <div class="stat-desc" id="selesaiDesc">Selesai diperbaiki</div>
                </div>
            </div>

            <div class="sidebar-stat-card card-delay">
                <div class="stat-icon" style="background: rgba(239, 68, 68, 0.1); color: #f87171;">
                    <i class="ph-warning"></i>
                </div>
                <div class="stat-info">
                    <div class="stat-label">Delay</div>
                    <div class="stat-value" id="delayTemuan">0</div>
                    <div class="stat-desc" id="delayDesc">Melewati target</div>
                </div>
            </div>
        </aside>

        <!-- Main Area (Right) -->
        <main class="analytics-main">
            <div class="charts-grid upper-charts">
                <div class="chart-card">
                    <div class="chart-header">
                        <i class="ph-chart-pie"></i> Status Penyelesaian
                    </div>
                    <div class="chart-body">
                        <canvas id="statusChart"></canvas>
                    </div>
                </div>

                <div class="chart-card">
                    <div class="chart-header">
                        <i class="ph-chart-bar"></i> Kategori 4M
                    </div>
                    <div class="chart-body">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- New Full Width Trend Chart -->
            <div class="chart-card trend-card">
                <div class="chart-header">
                    <i class="ph-chart-line"></i> Tren Temuan Bulanan (Performa Input)
                </div>
                <div class="chart-body trend-body">
                    <canvas id="trendChart"></canvas>
                </div>
            </div>
        </main>
    </div>

    <!-- Table Global Section (Full Width Bottom) -->
    <div class="table-card">
        <div class="chart-header" style="margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
            <i class="ph-list-bullets" style="color: #f59e0b; font-size: 1.25rem;"></i>
            <span style="font-size: 1.1rem; color: #fff;">Tabel Temuan Masalah</span>
        </div>
        <div style="overflow-x: auto;">
            <div class="table-responsive-wrapper">
                <table class="modern-table" id="analyticsTable">
                    <thead>
                        <tr>
                            <th style="width: 50px;">No</th>
                            <th>Tanggal</th>
                            <th>Shift</th>
                            <th>Problem</th>
                            <th>Target</th>
                            <th>4M</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <!-- Data will be populated here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/henkaten-analytics.js" asp-append-version="true"></script>
}
