<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Daily Machine Checklist @(User.FindFirst("Plant")?.Value ?? "RVI")</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard-analytics.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tv-display-fix.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="mesh-bg">
        <div class="mesh-blob blob-1"></div>
        <div class="mesh-blob blob-2"></div>
        <div class="mesh-blob blob-3"></div>
    </div>

    <!-- App Shell -->
    <div class="app-shell" id="appShell">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo-wrapper">
                    <i class="ph-atom-bold logo-icon"></i>
                    <span class="sidebar-logo-text">
                        <span style="background: linear-gradient(90deg, #60a5fa, #c084fc); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-weight: 800;">
                            Daily Machine Checklist @(User.FindFirst("Plant")?.Value ?? "RVI")
                        </span>
                    </span>
                </div>
            </div>

            <nav class="sidebar-nav">
                <a href="@Url.Action("Index", "Home")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                    <i class="ph-house-line"></i>
                    <span class="link-text">DASHBOARD</span>
                </a>
                <a href="@Url.Action("Index", "Inspection")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Inspection" ? "active" : "")">
                    <i class="ph-magnifying-glass"></i>
                    <span class="link-text">CHECKLIST</span>
                </a>
                <a href="@Url.Action("Index", "History")" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "History" ? "active" : "")">
                    <i class="ph-clock-counter-clockwise"></i>
                    <span class="link-text">HISTORY</span>
                </a>
                <!-- Andon System Dropdown -->
                <div class="nav-dropdown">
                    <!-- Parent Menu -->
                    <div class="nav-link has-submenu @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Andon" || ViewContext.RouteData.Values["Controller"]?.ToString() == "SCW" ? "active" : "")" onclick="toggleDropdown(this)">
                        <i class="ph-broadcast"></i>
                        <span class="link-text">ANDON SYSTEM</span>
                        <i class="ph-caret-down dropdown-arrow"></i>
                    </div>
                    
                    <!-- Submenu -->
                    <div class="submenu @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Andon" || ViewContext.RouteData.Values["Controller"]?.ToString() == "SCW" ? "open" : "")">
                        <a href="@Url.Action("Index", "Andon")" class="nav-link submenu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Andon" ? "active" : "")" title="Andon Monitoring">
                            <i class="ph-monitor"></i>
                            <span class="submenu-text">Monitoring Andon</span>
                        </a>
                        <a href="@Url.Action("Index", "SCW")" class="nav-link submenu-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "SCW" ? "active" : "")" title="Input SCW">
                            <i class="ph-warning-circle"></i>
                            <span class="submenu-text">Input SCW</span>
                        </a>
                    </div>
                </div>
                <div class="nav-divider"></div>
                
                <!-- System Management Dropdown -->
                <div class="nav-dropdown">
                    <!-- Parent Menu -->
                    <div class="nav-link has-submenu" onclick="toggleDropdown(this)">
                        <i class="ph-gear-six"></i>
                        <span class="link-text">Manajemen Sistem</span>
                        <i class="ph-caret-down dropdown-arrow"></i>
                    </div>
                    
                    <!-- Submenu -->
                    <div class="submenu">
                        <a href="@Url.Action("Index", "MachineData")" class="nav-link submenu-item" title="Data Mesin">
                            <i class="ph-hard-drives"></i>
                            <span class="submenu-text">Data Mesin</span>
                        </a>
                        <a href="@Url.Action("Index", "ChecklistData")" class="nav-link submenu-item" title="Data Checklist">
                            <i class="ph-clipboard-text"></i>
                            <span class="submenu-text">Data Checklist</span>
                        </a>
                        <a href="@Url.Action("Index", "UserManagement")" class="nav-link submenu-item" title="Manajemen User">
                            <i class="ph-users"></i>
                            <span class="submenu-text">Manajemen User</span>
                        </a>
                        <a href="@Url.Action("ImportVelasto", "ChecklistData")" class="nav-link submenu-item" title="Smart Import Velasto">
                            <i class="ph-file-xls"></i>
                            <span class="submenu-text">Smart Import Velasto</span>
                        </a>
                    </div>
                </div>
            </nav>

            <div class="sidebar-footer">
                <div class="copyright">© 2026 Daily Machine Checklist @(User.FindFirst("Plant")?.Value ?? "RVI")</div>
            </div>
        </aside>

        <!-- Main Wrapper -->
        <main class="main-wrapper">
            <!-- Navbar: The Command Deck -->
            <header class="app-navbar">
                <div class="nav-left">
                    @if (User.IsInRole("Administrator") || User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                    {
                        <button class="nav-btn" id="sidebarToggle" title="Toggle Navigation">
                            <i class="ph-list-bold"></i>
                        </button>
                    }
                    
                    <!-- Global Adaptive Search -->
                    <!-- Global Search Removed -->

                    <div class="nav-divider-v"></div>

                    <!-- System Health Indicator -->
                    <div class="system-status-nav" id="systemStatusContainer">
                        <div class="status-dot-pulse" id="systemStatusDot"></div>
                        <span class="status-label-nav" id="systemStatusText">System Online</span>
                    </div>

                    <!-- Fullscreen Command -->
                    <button class="fullscreen-btn" id="fullscreenToggle" title="Toggle Fullscreen">
                        <i class="ph-corners-out"></i>
                    </button>

                    <!-- Real-time Command Clock (Moved Here) -->
                    <div class="nav-clock" style="margin-left: 1.5rem;">
                        <div class="clock-time" style="flex-direction: row-reverse; gap: 0.5rem;">
                            <i class="ph-clock-bold"></i>
                            <span id="navTime">--:--:--</span>
                        </div>
                        <div class="clock-date" id="navDate" style="text-align: right;">--------</div>
                    </div>
                </div>

                <div class="nav-right">
                    <div class="nav-user-deck-wrapper" onclick="toggleUserDropdown()">
                        <div class="nav-user-deck">
                            <div class="user-avatar-hex">
                                <div class="avatar-inner">@((User.Identity?.Name ?? "OP").Substring(0, 2).ToUpper())</div>
                            </div>
                            <div class="user-meta-vision show-always">
                                <span class="u-name">@(User.FindFirst("FullName")?.Value ?? User.Identity?.Name ?? "Guest")</span>
                                <div class="u-role-tag">
                                    <span class="dot"></span>
                                    @(User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "VISITOR")
                                </div>
                            </div>
                            <div class="dropdown-caret">
                                <i class="ph-caret-down-bold"></i>
                            </div>
                        </div>

                        <!-- Enhanced Dropdown Menu -->
                        <div class="user-menu-dropdown" id="userDropdown">
                            <!-- User Info Card -->
                            <div class="dropdown-user-info">
                                <div class="info-header">User Profile</div>
                                <div class="info-row">
                                    <i class="ph-identification-card"></i>
                                    <span>ID: @(User.FindFirst("NIK")?.Value ?? "N/A")</span>
                                </div>
                                <div class="info-row">
                                    <i class="ph-envelope-simple"></i>
                                    <span>@(User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "No Email")</span>
                                </div>
                                <div class="info-row">
                                    <i class="ph-buildings"></i>
                                    <span>Dep: @(User.FindFirst("Department")?.Value ?? "General")</span>
                                </div>
                            </div>
                            
                            <div class="dropdown-divider"></div>

                            <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                <button type="submit" class="user-menu-item logout">
                                    <i class="ph-sign-out"></i>
                                    <span>Logout System</span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <div class="page-content">
                @RenderBody()
            </div>
        </main>
    </div>

    <style>
        /* --- SUBMENU STYLES (DEFAULT / EXPANDED) --- */
        .submenu {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-out;
            background: rgba(0,0,0,0.2);
            border-radius: 8px;
            margin-top: 4px;
        }
        .submenu.open { max-height: 200px; }
        
        .submenu-item {
            padding-left: 1rem !important;
            font-size: 0.85rem !important;
            color: #94a3b8 !important;
            height: 42px !important;
            display: flex !important;
            align-items: center;
            gap: 12px;
        }
        .submenu-item i {
            font-size: 1.1rem;
            color: #64748b;
            transition: color 0.2s;
        }
        .submenu-item:hover { color: #fff !important; background: rgba(255,255,255,0.05); }
        .submenu-item:hover i { color: #818cf8; }
        
        .has-submenu { cursor: pointer; display: flex; align-items: center; justify-content: space-between; }
        .dropdown-arrow { font-size: 0.8rem; transition: transform 0.3s; margin-left: auto; }
        .nav-dropdown.active .dropdown-arrow { transform: rotate(180deg); }


        /* --- COLLAPSED SIDEBAR LOGIC --- */

        /* 1. Force Overflow Visible so menu can pop out */
        .sidebar.collapsed { width: 84px; overflow: visible !important; }
        .sidebar.collapsed .nav-dropdown { position: relative; }

        /* 2. Hide Text & Arrow */
        .sidebar.collapsed .dropdown-arrow,
        .sidebar.collapsed .link-text { display: none !important; }

        /* 3. Floating Submenu Container (Sharp & Compact) */
        .sidebar.collapsed .submenu {
            display: none; 
            max-height: none !important; 
            
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            top: 100%; 
            width: 50px; /* Lebar pas untuk icon */
            
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.15);
            border-radius: 6px; /* Lancip / Sharp corners */
            padding: 8px 0;
            margin-top: 8px;
            
            flex-direction: column;
            gap: 4px;
            align-items: center;
            overflow: hidden; /* Mencegah text bocor */
            
            box-shadow: 0 10px 40px -5px rgba(0,0,0,0.8);
            z-index: 9999;
        }

        /* 4. Show Submenu when Active (Clicked) */
        .sidebar.collapsed .nav-dropdown.active .submenu {
            display: flex;
            animation: slideDownFade 0.2s ease-out;
        }

        /* 5. Submenu Item Styling (Icon Only) */
        .sidebar.collapsed .submenu-item {
            padding: 0 !important;
            width: 40px !important;
            height: 40px !important;
            border-radius: 4px; /* Lancip item juga */
            display: flex !important;
            align-items: center;
            justify-content: center;
            background: transparent;
            transition: all 0.2s ease;
        }
        
        .sidebar.collapsed .submenu-item:hover {
            background: rgba(129, 140, 248, 0.2);
            border: 1px solid rgba(129, 140, 248, 0.3);
        }

        /* 6. Text Annihilator (Aggressive Hide) */
        .sidebar.collapsed .submenu-text,
        .sidebar.collapsed .submenu-item span {
            display: none !important;
            visibility: hidden !important;
            opacity: 0 !important;
            width: 0 !important;
            font-size: 0 !important;
            position: absolute;
        }

        /* 7. Icon Visibility */
        .sidebar.collapsed .submenu-item i {
            display: block !important;
            margin: 0 !important;
            font-size: 1.4rem !important;
            color: #94a3b8;
            position: static !important; /* Reset positioning */
        }
        
        .sidebar.collapsed .submenu-item:hover i { 
            color: #fff;
            filter: drop-shadow(0 0 8px rgba(129, 140, 248, 0.6));
        }

        @@keyframes slideDownFade {
            from { opacity: 0; transform: translate(-50%, -15px); }
            to { opacity: 1; transform: translate(-50%, 0); }
        }

        /* User Dropdown */
        .user-dropdown-wrapper { position: relative; }
        .user-menu-dropdown {
            display: none;
            position: absolute;
            top: 100%;
            right: 0;
            margin-top: 10px;
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 0.5rem;
            min-width: 180px;
            box-shadow: 0 10px 40px -5px rgba(0, 0, 0, 0.5);
            z-index: 1000;
        }
        .user-menu-dropdown.active { display: block; animation: slideIn 0.2s ease-out; }
        .user-menu-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 0.8rem 1rem;
            color: #94a3b8;
            border-radius: 8px;
            transition: all 0.2s;
            background: none;
            border: none;
            width: 100%;
            cursor: pointer;
            font-family: inherit;
        }
        .user-menu-item:hover { background: rgba(255, 255, 255, 0.05); color: #f1f5f9; }
        .user-menu-item.logout:hover { background: rgba(251, 113, 133, 0.1); color: #fb7185; }
        
        @@keyframes slideIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
    </style>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://unpkg.com/phosphor-icons"></script>
    <script>
        function toggleDropdown(element) {
            // Simple toggle logic regardless of sidebar state
            const parent = element.parentElement;
            const submenu = parent.querySelector('.submenu');
            
            parent.classList.toggle('active');
            
            // Special handling for normal state animation
            if (!document.getElementById('sidebar').classList.contains('collapsed')) {
                 submenu.classList.toggle('open');
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.getElementById('sidebar');
            const toggleBtn = document.getElementById('sidebarToggle');
            
            // 1. Persistence
            const isCollapsed = localStorage.getItem('sidebar-collapsed') === 'true';
            if (isCollapsed && window.innerWidth > 1024) {
                sidebar.classList.add('collapsed');
            }

            // 2. Clock
            function updateClock() {
                const now = new Date();
                document.getElementById('navTime').textContent = now.toLocaleTimeString('en-US', { hour12: false, hour: '2-digit', minute: '2-digit', second: '2-digit' });
                document.getElementById('navDate').textContent = now.toLocaleDateString('en-GB', { day: '2-digit', month: 'short', year: 'numeric' });
            }
            setInterval(updateClock, 1000);
            updateClock();
            
            // 3. Fullscreen
            const fsBtn = document.getElementById('fullscreenToggle');
            if (fsBtn) {
                const fsIcon = fsBtn.querySelector('i');
                fsBtn.addEventListener('click', () => {
                    if (!document.fullscreenElement) {
                        document.documentElement.requestFullscreen().catch(e => console.error(e));
                        if (fsIcon) fsIcon.classList.replace('ph-corners-out', 'ph-corners-in');
                    } else {
                        document.exitFullscreen();
                        if (fsIcon) fsIcon.classList.replace('ph-corners-in', 'ph-corners-out');
                    }
                });
                document.addEventListener('fullscreenchange', () => {
                    if (!document.fullscreenElement && fsIcon) fsIcon.classList.replace('ph-corners-in', 'ph-corners-out');
                });
            }

            // 4. Sidebar Toggle
            if (toggleBtn && sidebar) {
                toggleBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    if (window.innerWidth > 1024) {
                        sidebar.classList.toggle('collapsed');
                        localStorage.setItem('sidebar-collapsed', sidebar.classList.contains('collapsed'));
                        
                        // Logic reset dihapus agar status dropdown tetap tersimpan (persist)
                    } else {
                        sidebar.classList.toggle('mobile-active');
                    }
                });

                document.addEventListener('click', (e) => {
                    if (window.innerWidth <= 1024 && !sidebar.contains(e.target) && !toggleBtn.contains(e.target) && sidebar.classList.contains('mobile-active')) {
                        sidebar.classList.remove('mobile-active');
                    }
                });
            }

            // 5. Card Spotlight
            document.addEventListener('mousemove', (e) => {
                document.querySelectorAll('.bento-card, .stat-box, .nav-link').forEach(card => {
                    const rect = card.getBoundingClientRect();
                    card.style.setProperty('--mouse-x', `${e.clientX - rect.left}px`);
                    card.style.setProperty('--mouse-y', `${e.clientY - rect.top}px`);
                });
            });
        });

        function toggleUserDropdown() {
            const wrapper = document.querySelector('.nav-user-deck-wrapper');
            const dropdown = document.getElementById('userDropdown');
            wrapper.classList.toggle('active');
            dropdown.classList.toggle('active');
        }
        
        // Close dropdown when clicking outside
        document.addEventListener('click', (e) => {
             const wrapper = document.querySelector('.nav-user-deck-wrapper');
             const dropdown = document.getElementById('userDropdown');
             
             if (wrapper && wrapper.contains(e.target)) {
                 return; // Click inside wrapper, ignore
             }

             if (dropdown && dropdown.classList.contains('active')) {
                 dropdown.classList.remove('active');
                 wrapper.classList.remove('active'); // Reset arrow rotation
             }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- SignalR Client -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        // SignalR Connection Setup
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .withAutomaticReconnect()
            .build();

        // UI Update Helper
        function updateStatus(state) {
            const statusDot = document.getElementById("systemStatusDot");
            const statusText = document.getElementById("systemStatusText");
            const statusContainer = document.getElementById("systemStatusContainer");

            if (!statusDot || !statusText || !statusContainer) return;

            let color, rgb;
            if (state === "Connected") {
                color = "#10b981"; // Emerald-500
                rgb = "16, 185, 129";
                statusText.innerText = "SYSTEM ONLINE";
            } 
            else if (state === "Reconnecting") {
                color = "#f59e0b"; // Amber-500
                rgb = "245, 158, 11";
                statusText.innerText = "RECONNECTING...";
            } 
            else { // Disconnected
                color = "#ef4444"; // Red-500
                rgb = "239, 68, 68";
                statusText.innerText = "DISCONNECTED";
            }

            // Set CSS Variables for global styling update
            statusContainer.style.setProperty('--status-color', color);
            statusContainer.style.setProperty('--status-color-rgb', rgb);
            statusText.style.color = color;
        }

        // Heartbeat Effect (Light up on receiving data)
        function flashStatus() {
            const container = document.getElementById("systemStatusContainer");
            if (!container) return;
            container.style.transition = "all 0.3s ease";
            container.style.filter = "brightness(1.5)";
            container.style.background = "rgba(var(--status-color-rgb), 0.4)";
            setTimeout(() => {
                container.style.filter = "brightness(1)";
                container.style.background = "rgba(var(--status-color-rgb), 0.1)";
            }, 300);
        }

        // Listen for Server Activity
        connection.on("ReceiveSystemStatus", (msg) => {
            console.log("SignalR Message:", msg);
            flashStatus(); // Visual feedback
        });

        // Connection Events
        connection.onreconnecting(error => {
            console.warn("SignalR Reconnecting:", error);
            updateStatus("Reconnecting");
        });

        connection.onreconnected(connectionId => {
            console.log("SignalR Reconnected:", connectionId);
            updateStatus("Connected");
        });

        connection.onclose(error => {
            console.error("SignalR Closed:", error);
            updateStatus("Disconnected");
        });

        // Toast Notification System
        function showToast(message, type = 'info') {
            const container = document.getElementById("toastContainer");
            if (!container) return;

            const toast = document.createElement("div");
            toast.className = "fade-in";
            toast.style.cssText = `
                background: rgba(15, 23, 42, 0.95);
                backdrop-filter: blur(12px);
                border: 1px solid ${type === 'success' ? 'rgba(16, 185, 129, 0.4)' : 'rgba(129, 140, 248, 0.4)'};
                padding: 1rem 1.5rem;
                border-radius: 12px;
                color: #fff;
                display: flex;
                align-items: center;
                gap: 0.75rem;
                box-shadow: 0 10px 25px rgba(0,0,0,0.3);
                min-width: 250px;
                animation: slideUp 0.4s ease forwards;
            `;

            const icon = type === 'success' ? 'ph-check-circle-bold' : 'ph-info-bold';
            const iconColor = type === 'success' ? '#10b981' : '#818cf8';

            toast.innerHTML = `
                <i class="${icon}" style="font-size: 1.25rem; color: ${iconColor};"></i>
                <div style="font-size: 0.9rem; font-weight: 500;">${message}</div>
            `;

            container.appendChild(toast);

            setTimeout(() => {
                toast.style.animation = "slideDown 0.4s ease forwards";
                setTimeout(() => toast.remove(), 400);
            }, 4000);
        }

        // Global Refresh Signal Listener
        connection.on("RefreshData", (msg) => {
            console.log("Real-time Update Signal:", msg);
            flashStatus(); // Trigger heartbeat
            
            // Identify Current Controller
            const path = window.location.pathname.toLowerCase();
            
            if (path.includes("/home") || path === "/") {
                if (window.refreshDashboard) {
                    showToast("Dashboard ter-update otomatis!", "success");
                    window.refreshDashboard();
                }
            } 
            else if (path.includes("/history")) {
                showToast("Data baru masuk! Memperbarui tabel...", "info");
                setTimeout(() => location.reload(), 1500);
            }
        });

        // Start Connection
        async function startSignalR() {
            try {
                await connection.start();
                console.log("SignalR Connection Protocol: " + connection.connection.protocol);
                updateStatus("Connected");
            } catch (err) {
                console.error("SignalR Connection Error:", err);
                updateStatus("Disconnected");
                setTimeout(startSignalR, 5000); // Retry after 5s
            }
        }

        // Initialize on Load
        document.addEventListener('DOMContentLoaded', () => {
            updateStatus("Disconnected"); 
            startSignalR();
        });
    </script>
    <div id="toastContainer" style="position: fixed; bottom: 2rem; right: 2rem; z-index: 9999; display: flex; flex-direction: column; gap: 0.75rem;"></div>
</body>
</html>
