@model IEnumerable<AMRVI.Models.InspectionSession>

@{
    ViewData["Title"] = "Inspection History";
}

<div class="container fade-in" style="padding-top: 1rem;">
    <!-- Page Header -->
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
        <div style="display: flex; align-items: center; gap: 1rem;">
            <div style="width: 4px; height: 32px; background: #3b82f6; border-radius: 2px; box-shadow: 0 0 10px #3b82f6;"></div>
            <h1 style="font-size: 1.75rem; font-weight: 700; color: #f8fafc; margin: 0;">Inspection History</h1>
        </div>

        <div style="display: flex; gap: 1rem;">
            <a href="@Url.Action("Index", "Inspection")" class="neural-btn secondary" style="text-decoration: none; padding: 0.75rem 1.5rem; font-size: 0.9rem; background: rgba(34, 211, 238, 0.1); border-color: rgba(34, 211, 238, 0.3); color: #22d3ee; display: flex; align-items: center; gap: 0.5rem;">
                <i class="ph-arrow-left-bold"></i> KEMBALI KE INPUTAN
            </a>

            <a href="@Url.Action("ExportHistory", "History")" class="neural-btn" style="text-decoration: none; padding: 0.75rem 1.5rem; font-size: 0.9rem; background: rgba(59, 130, 246, 0.1); border-color: rgba(59, 130, 246, 0.3); color: #60a5fa; display: flex; align-items: center; gap: 0.5rem;">
                <i class="ph-file-xls-bold"></i> EXPORT ALL
            </a>
        </div>
    </div>

    <!-- Enhanced Filter Section -->
    <div class="mb-4" style="padding: 1.25rem 0;">
        <div style="display: flex; gap: 0.75rem; align-items: flex-end; flex-wrap: wrap;">
            
            <!-- Search Bar -->
            <div style="flex: 1; min-width: 200px; max-width: 350px;">
                <label style="display: block; font-size: 0.7rem; font-weight: 600; color: #94a3b8; margin-bottom: 0.4rem; text-transform: uppercase; letter-spacing: 0.5px;">
                    <i class="ph-magnifying-glass-bold"></i> Pencarian
                </label>
                <input type="text" id="searchInput" placeholder="Cari mesin, nomor, inspector..." 
                       oninput="applySearch()" 
                       class="search-input" 
                       style="width: 100%; padding: 0.65rem 0.9rem; background: rgba(15, 23, 42, 0.6); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 8px; color: #e2e8f0; font-size: 0.85rem;">
            </div>

            <!-- Date Picker Button -->
            <button onclick="openCalendarModal()" class="date-picker-btn">
                <i class="ph-calendar-blank-bold"></i>
                <span id="selectedDateText">Semua Tanggal</span>
            </button>

            <!-- Reset Button -->
            <button onclick="resetAllFilters()" class="reset-btn">
                <i class="ph-x-circle-bold"></i>
                <span>Reset</span>
            </button>
        </div>

        <!-- Filter Info -->
        <div style="display: flex; gap: 1rem; margin-top: 0.65rem; font-size: 0.7rem; color: #64748b; min-height: 16px;">
            <span id="searchInfo"></span>
            <span id="dateInfo"></span>
        </div>
    </div>

    <!-- Calendar Modal -->
    <div id="calendarModal" class="calendar-modal" onclick="closeCalendarModal(event)">
        <div class="calendar-modal-content" onclick="event.stopPropagation()">
            <div class="calendar-modal-header">
                <h3><i class="ph-calendar-bold"></i> Pilih Tanggal</h3>
                <button onclick="closeCalendarModal()" class="modal-close-btn">
                    <i class="ph-x-bold"></i>
                </button>
            </div>
            <div id="calendarWidget" class="calendar-widget"></div>
            <div class="calendar-modal-footer">
                <button onclick="setToday()" class="modal-action-btn secondary">
                    <i class="ph-calendar-check-bold"></i> Hari Ini
                </button>
                <button onclick="clearDateFilter()" class="modal-action-btn primary">
                    <i class="ph-x-bold"></i> Hapus Filter
                </button>
            </div>
        </div>
    </div>

    <!-- Main Card -->
    <div class="glass-card" style="padding: 0; overflow: hidden; background: rgba(15, 23, 42, 0.6); border: 1px solid rgba(255, 255, 255, 0.05);">
        
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="history-table" style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th class="th-style" style="width: 80px;">ID</th>
                            <th class="th-style">MACHINE</th>
                            <th class="th-style">NO.</th>
                            <th class="th-style">INSPECTOR</th>
                            <th class="th-style">DATE</th>
                            <th class="th-style">STATUS</th>
                            <th class="th-style">ITEMS</th>
                            <th class="th-style" style="text-align: right;">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var session in Model)
                        {
                            <tr class="tr-hover">
                                <td class="td-style font-mono" style="color: #64748b;">#@session.Id</td>
                                <td class="td-style fw-bold text-white">@session.MachineNumber.Machine.Name</td>
                                <td class="td-style text-secondary">@session.MachineNumber.Number</td>
                                <td class="td-style">
                                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                                        <div style="width: 24px; height: 24px; background: rgba(255,255,255,0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 12px; color: #94a3b8;">
                                            <i class="ph-user"></i>
                                        </div>
                                        <span style="color: #cbd5e1;">@session.InspectorName</span>
                                    </div>
                                </td>
                                <td class="td-style font-mono" style="color: #94a3b8; font-size: 0.85rem;">@session.InspectionDate.ToString("dd MMM yyyy, HH:mm")</td>
                                <td class="td-style">
                                    @if (session.IsCompleted)
                                    {
                                        <span class="status-badge success">
                                            <i class="ph-check-circle-fill"></i> Completed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge warning">
                                            <i class="ph-clock-fill"></i> In Progress
                                        </span>
                                    }
                                </td>
                                <td class="td-style" style="color: #94a3b8;">
                                    <span style="background: rgba(255,255,255,0.05); padding: 2px 8px; border-radius: 4px; font-size: 0.8rem;">
                                        @session.InspectionResults.Count
                                    </span>
                                </td>
                                <td class="td-style" style="text-align: right;">
                                    <div style="display: flex; justify-content: flex-end; gap: 0.75rem;">
                                        <a href="@Url.Action("Details", "History", new { id = session.Id })" class="action-btn">
                                            Details <i class="ph-arrow-right"></i>
                                        </a>

                                        @if (User.IsInRole("Administrator") || User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                                        {
                                            <form asp-action="Delete" asp-route-id="@session.Id" method="post" onsubmit="return confirm('Apakah Anda yakin ingin menghapus data inspeksi ini? Tindakan ini tidak dapat dibatalkan.');" style="display: inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="action-btn delete-btn">
                                                    <i class="ph-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="text-align: center; padding: 5rem 2rem; color: #64748b;">
                <div style="width: 80px; height: 80px; background: rgba(255,255,255,0.03); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem auto;">
                    <i class="ph-clipboard-text" style="font-size: 2.5rem; opacity: 0.5;"></i>
                </div>
                <h3 style="color: #cbd5e1; font-weight: 600; margin-bottom: 0.5rem;">No History Found</h3>
                <p style="margin-bottom: 2rem;">You haven't performed any inspections yet.</p>
                <a href="@Url.Action("Index", "Inspection")" class="neural-btn" style="text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1.5rem;">
                    <i class="ph-plus-bold"></i> Start Inspection
                </a>
            </div>
        }
    </div>
</div>

