<script>
    let currentCalendarDate = new Date();
    let selectedDate = null;
    let allDatesWithData = [];

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        collectDatesWithData();
        renderCalendar();
    });

    // Collect all dates that have inspection data
    function collectDatesWithData() {
        const rows = document.querySelectorAll('.tr-hover');
        allDatesWithData = [];
        
        rows.forEach(row => {
            const dateCell = row.querySelector('.td-style:nth-child(5)');
            if (dateCell) {
                const date = parseDateFromText(dateCell.textContent.trim());
                const dateStr = formatDateKey(date);
                if (!allDatesWithData.includes(dateStr)) {
                    allDatesWithData.push(dateStr);
                }
            }
        });
    }

    // Render Calendar
    function renderCalendar() {
        const year = currentCalendarDate.getFullYear();
        const month = currentCalendarDate.getMonth();
        const today = new Date();
        
        const firstDay = new Date(year, month, 1);
        const lastDay = new Date(year, month + 1, 0);
        const prevLastDay = new Date(year, month, 0);
        
        const monthNames = ['Januari', 'Februari', 'Maret', 'April', 'Mei', 'Juni', 'Juli', 'Agustus', 'September', 'Oktober', 'November', 'Desember'];
        
        let html = `
            <div class="calendar-header">
                <button class="calendar-nav-btn" onclick="changeMonth(-1)">‹</button>
                <h3>${monthNames[month]} ${year}</h3>
                <button class="calendar-nav-btn" onclick="changeMonth(1)">›</button>
            </div>
            <div class="calendar-grid">
                <div class="calendar-day-header">Min</div>
                <div class="calendar-day-header">Sen</div>
                <div class="calendar-day-header">Sel</div>
                <div class="calendar-day-header">Rab</div>
                <div class="calendar-day-header">Kam</div>
                <div class="calendar-day-header">Jum</div>
                <div class="calendar-day-header">Sab</div>
        `;
        
        // Previous month days
        const firstDayOfWeek = firstDay.getDay();
        for (let i = firstDayOfWeek - 1; i >= 0; i--) {
            const day = prevLastDay.getDate() - i;
            html += `<div class="calendar-day other-month">${day}</div>`;
        }
        
        // Current month days
        for (let day = 1; day <= lastDay.getDate(); day++) {
            const currentDate = new Date(year, month, day);
            const dateKey = formatDateKey(currentDate);
            
            let classes = ['calendar-day'];
            if (isSameDay(currentDate, today)) classes.push('today');
            if (selectedDate && isSameDay(currentDate, selectedDate)) classes.push('selected');
            if (allDatesWithData.includes(dateKey)) classes.push('has-data');
            
            html += `<div class="${classes.join(' ')}" onclick="selectDate(${year}, ${month}, ${day})">${day}</div>`;
        }
        
        // Next month days
        const remainingDays = 42 - (firstDayOfWeek + lastDay.getDate());
        for (let day = 1; day <= remainingDays; day++) {
            html += `<div class="calendar-day other-month">${day}</div>`;
        }
        
        html += '</div>';
        document.getElementById('calendarWidget').innerHTML = html;
    }

    function changeMonth(delta) {
        currentCalendarDate.setMonth(currentCalendarDate.getMonth() + delta);
        renderCalendar();
    }

    function selectDate(year, month, day) {
        selectedDate = new Date(year, month, day);
        renderCalendar();
        applyDateFilter();
        
        // Update button text
        const dateStr = selectedDate.toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' });
        document.getElementById('selectedDateText').textContent = dateStr;
        
        // Close modal
        closeCalendarModal();
    }

    function setToday() {
        selectedDate = new Date();
        currentCalendarDate = new Date();
        renderCalendar();
        applyDateFilter();
        
        document.getElementById('selectedDateText').textContent = 'Hari Ini';
        closeCalendarModal();
    }

    function clearDateFilter() {
        selectedDate = null;
        document.getElementById('selectedDateText').textContent = 'Semua Tanggal';
        document.getElementById('dateInfo').textContent = '';
        
        const rows = document.querySelectorAll('.tr-hover');
        rows.forEach(row => row.style.display = '');
        hideNoResults();
        renderCalendar();
        closeCalendarModal();
    }

    function openCalendarModal() {
        document.getElementById('calendarModal').classList.add('active');
        renderCalendar();
    }

    function closeCalendarModal(event) {
        if (!event || event.target.id === 'calendarModal') {
            document.getElementById('calendarModal').classList.remove('active');
        }
    }

    function applyDateFilter() {
        if (!selectedDate) return;
        
        const rows = document.querySelectorAll('.tr-hover');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const dateCell = row.querySelector('.td-style:nth-child(5)');
            if (!dateCell) return;
            
            const rowDate = parseDateFromText(dateCell.textContent.trim());
            const show = isSameDay(rowDate, selectedDate);
            
            row.style.display = show ? '' : 'none';
            if (show) visibleCount++;
        });
        
        const dateStr = selectedDate.toLocaleDateString('id-ID', { day: 'numeric', month: 'long', year: 'numeric' });
        document.getElementById('dateInfo').textContent = `${visibleCount} data pada ${dateStr}`;
        
        if (visibleCount === 0) {
            showNoResults();
        } else {
            hideNoResults();
        }
    }

    // Search Function
    function applySearch() {
        const searchTerm = document.getElementById('searchInput').value.toLowerCase();
        const rows = document.querySelectorAll('.tr-hover');
        let visibleCount = 0;
        
        rows.forEach(row => {
            const machine = row.querySelector('.td-style:nth-child(2)')?.textContent.toLowerCase() || '';
            const number = row.querySelector('.td-style:nth-child(3)')?.textContent.toLowerCase() || '';
            const inspector = row.querySelector('.td-style:nth-child(4)')?.textContent.toLowerCase() || '';
            
            const show = machine.includes(searchTerm) || number.includes(searchTerm) || inspector.includes(searchTerm);
            row.style.display = show ? '' : 'none';
            if (show) visibleCount++;
        });
        
        if (searchTerm) {
            document.getElementById('searchInfo').textContent = `Ditemukan ${visibleCount} hasil`;
        } else {
            document.getElementById('searchInfo').textContent = '';
        }
        
        if (visibleCount === 0 && searchTerm) {
            showNoResults();
        } else {
            hideNoResults();
        }
    }

    function resetAllFilters() {
        selectedDate = null;
        document.getElementById('searchInput').value = '';
        document.getElementById('searchInfo').textContent = '';
        document.getElementById('dateInfo').textContent = '';
        document.getElementById('selectedDateText').textContent = 'Semua Tanggal';
        
        const rows = document.querySelectorAll('.tr-hover');
        rows.forEach(row => row.style.display = '');
        hideNoResults();
        renderCalendar();
    }

    // Helper Functions
    function formatDateKey(date) {
        return `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, '0')}-${String(date.getDate()).padStart(2, '0')}`;
    }

    function isSameDay(date1, date2) {
        return date1.getDate() === date2.getDate() &&
               date1.getMonth() === date2.getMonth() &&
               date1.getFullYear() === date2.getFullYear();
    }

    function parseDateFromText(text) {
        const months = {'Jan':0,'Feb':1,'Mar':2,'Apr':3,'May':4,'Jun':5,'Jul':6,'Aug':7,'Sep':8,'Oct':9,'Nov':10,'Dec':11};
        const parts = text.match(/(\d+)\s+(\w+)\s+(\d+),\s+(\d+):(\d+)/);
        if (parts) {
            return new Date(parts[3], months[parts[2]], parts[1], parts[4], parts[5]);
        }
        return new Date();
    }

    function showNoResults() {
        let noResultsDiv = document.getElementById('noResultsMessage');
        if (!noResultsDiv) {
            noResultsDiv = document.createElement('div');
            noResultsDiv.id = 'noResultsMessage';
            noResultsDiv.style.cssText = 'text-align: center; padding: 3rem; color: #64748b;';
            noResultsDiv.innerHTML = `
                <i class="ph-magnifying-glass" style="font-size: 3rem; opacity: 0.3;"></i>
                <p style="margin-top: 1rem; font-weight: 600; color: #94a3b8;">Tidak ada data yang sesuai</p>
            `;
            document.querySelector('.table-responsive').appendChild(noResultsDiv);
        }
        document.querySelector('.history-table').style.display = 'none';
    }

    function hideNoResults() {
        const noResultsDiv = document.getElementById('noResultsMessage');
        if (noResultsDiv) noResultsDiv.remove();
        const table = document.querySelector('.history-table');
        if (table) table.style.display = '';
    }
</script>
