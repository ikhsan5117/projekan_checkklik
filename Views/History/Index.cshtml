@model IEnumerable<AMRVI.Models.InspectionSession>

@{
    ViewData["Title"] = "Inspection History";
}

<div class="container fade-in" style="padding-top: 1rem;">
    <!-- Page Header -->
    <div style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2rem; flex-wrap: wrap; gap: 1rem;">
        <div style="display: flex; align-items: center; gap: 1rem;">
            <div style="width: 4px; height: 32px; background: #3b82f6; border-radius: 2px; box-shadow: 0 0 10px #3b82f6;"></div>
            <h1 style="font-size: 1.75rem; font-weight: 700; color: #f8fafc; margin: 0;">Inspection History</h1>
        </div>

        <a href="@Url.Action("Index", "Inspection")" class="neural-btn" style="text-decoration: none; padding: 0.75rem 1.5rem; font-size: 0.9rem;">
            <i class="ph-plus-bold"></i> NEW INSPECTION
        </a>
    </div>

    <!-- Main Card -->
    <div class="glass-card" style="padding: 0; overflow: hidden; background: rgba(15, 23, 42, 0.6); border: 1px solid rgba(255, 255, 255, 0.05);">
        
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="history-table" style="width: 100%; border-collapse: collapse;">
                    <thead>
                        <tr>
                            <th class="th-style" style="width: 80px;">ID</th>
                            <th class="th-style">MACHINE</th>
                            <th class="th-style">NO.</th>
                            <th class="th-style">INSPECTOR</th>
                            <th class="th-style">DATE</th>
                            <th class="th-style">STATUS</th>
                            <th class="th-style">ITEMS</th>
                            <th class="th-style" style="text-align: right;">ACTIONS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var session in Model)
                        {
                            <tr class="tr-hover">
                                <td class="td-style font-mono" style="color: #64748b;">#@session.Id</td>
                                <td class="td-style fw-bold text-white">@session.MachineNumber.Machine.Name</td>
                                <td class="td-style text-secondary">@session.MachineNumber.Number</td>
                                <td class="td-style">
                                    <div style="display: flex; align-items: center; gap: 0.5rem;">
                                        <div style="width: 24px; height: 24px; background: rgba(255,255,255,0.1); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 12px; color: #94a3b8;">
                                            <i class="ph-user"></i>
                                        </div>
                                        <span style="color: #cbd5e1;">@session.InspectorName</span>
                                    </div>
                                </td>
                                <td class="td-style font-mono" style="color: #94a3b8; font-size: 0.85rem;">@session.InspectionDate.ToString("dd MMM yyyy, HH:mm")</td>
                                <td class="td-style">
                                    @if (session.IsCompleted)
                                    {
                                        <span class="status-badge success">
                                            <i class="ph-check-circle-fill"></i> Completed
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge warning">
                                            <i class="ph-clock-fill"></i> In Progress
                                        </span>
                                    }
                                </td>
                                <td class="td-style" style="color: #94a3b8;">
                                    <span style="background: rgba(255,255,255,0.05); padding: 2px 8px; border-radius: 4px; font-size: 0.8rem;">
                                        @session.InspectionResults.Count
                                    </span>
                                </td>
                                <td class="td-style" style="text-align: right;">
                                    <a href="@Url.Action("Details", "History", new { id = session.Id })" class="action-btn">
                                        Details <i class="ph-arrow-right"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="text-align: center; padding: 5rem 2rem; color: #64748b;">
                <div style="width: 80px; height: 80px; background: rgba(255,255,255,0.03); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto 1.5rem auto;">
                    <i class="ph-clipboard-text" style="font-size: 2.5rem; opacity: 0.5;"></i>
                </div>
                <h3 style="color: #cbd5e1; font-weight: 600; margin-bottom: 0.5rem;">No History Found</h3>
                <p style="margin-bottom: 2rem;">You haven't performed any inspections yet.</p>
                <a href="@Url.Action("Index", "Inspection")" class="neural-btn" style="text-decoration: none; display: inline-flex; align-items: center; gap: 0.5rem; padding: 0.75rem 1.5rem;">
                    <i class="ph-plus-bold"></i> Start Inspection
                </a>
            </div>
        }
    </div>
</div>

<style>
    /* Table Styling */
    .th-style {
        padding: 1rem 1.5rem;
        background: rgba(15, 23, 42, 0.4);
        color: #64748b;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 1px;
        text-transform: uppercase;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        text-align: left;
        white-space: nowrap; /* Prevent headers from wrapping */
    }
    
    .td-style {
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.03);
        vertical-align: middle;
        font-size: 0.9rem;
        color: #e2e8f0;
    }
    
    /* Table Responsiveness for Tablet/Mobile */
    @@media (max-width: 1024px) {
        .th-style, .td-style {
            padding: 1rem 0.75rem; /* Reduced horizontal padding */
            font-size: 0.85rem;
        }

        .th-style {
            font-size: 0.7rem;
        }

        /* Prevent wrapping on critical columns */
        .td-style {
            white-space: nowrap;
        }
        
        /* Allow wrapping on Inspector name if really needed, but generally keep table scrollable */
        .history-table {
            min-width: 800px; /* Ensure table keeps its structure and triggers scroll if needed */
        }
    }
    
    .tr-hover:last-child .td-style {
        border-bottom: none;
    }

    .tr-hover:hover {
        background: rgba(255, 255, 255, 0.02);
    }
    
    .tr-hover:hover .td-style {
        color: #fff;
    }
    
    /* Font Mono for ID & Date */
    .font-mono {
        font-family: 'JetBrains Mono', monospace; 
        /* Fallback if JetBrains isn't loaded, plain monospace works too */
    }

    /* Status Badges */
    .status-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        border: 1px solid transparent;
        white-space: nowrap; /* Important prevent cut-off */
    }
    
    .status-badge.success {
        background: rgba(16, 185, 129, 0.1);
        color: #34d399;
        border-color: rgba(16, 185, 129, 0.2);
        box-shadow: 0 0 10px rgba(16, 185, 129, 0.1);
    }
    
    .status-badge.warning {
        background: rgba(245, 158, 11, 0.1);
        color: #fbbf24;
        border-color: rgba(245, 158, 11, 0.2);
    }

    /* Action Button */
    .action-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 12px;
        border-radius: 8px;
        background: rgba(129, 140, 248, 0.1);
        color: #818cf8;
        font-size: 0.8rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        border: 1px solid rgba(129, 140, 248, 0.2);
        white-space: nowrap;
    }
    
    .action-btn:hover {
        background: rgba(129, 140, 248, 0.2);
        color: #fff;
        border-color: rgba(129, 140, 248, 0.4);
        transform: translateY(-1px);
    }

    /* Glass Card override */
    .glass-card {
        background: rgba(15, 23, 42, 0.6);
        backdrop-filter: blur(20px);
        border-radius: 16px; 
        border: 1px solid rgba(255, 255, 255, 0.08); 
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-direction: column;
    }

    /* Scrollable Container */
    .table-responsive {
        overflow: auto;
        max-height: 70vh; /* Batas tinggi untuk scroll vertikal */
        width: 100%;
        position: relative;
        border-radius: 16px;
    }

    .history-table {
        min-width: 1200px; /* Lebar minimum untuk memicu scroll horizontal */
        width: 100%;
        border-collapse: separate; /* Required for sticky header border */
        border-spacing: 0;
    }

    /* Sticky Header */
    .th-style {
        position: sticky;
        top: 0;
        z-index: 10;
        background: rgba(30, 41, 59, 0.98); /* Lebih solid agar tidak transparan */
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
    }
    
    /* Modern Custom Scrollbar */
    .table-responsive::-webkit-scrollbar {
        width: 10px;
        height: 10px;
    }
    
    .table-responsive::-webkit-scrollbar-track {
        background: rgba(15, 23, 42, 0.4);
        border-radius: 0;
    }
    
    .table-responsive::-webkit-scrollbar-thumb {
        background: rgba(148, 163, 184, 0.2);
        border-radius: 5px;
        border: 2px solid rgba(15, 23, 42, 0.6); /* Memberi efek padding */
    }
    
    .table-responsive::-webkit-scrollbar-thumb:hover {
        background: rgba(129, 140, 248, 0.5); /* Warna primary saat hover */
    }
    
    .table-responsive::-webkit-scrollbar-corner {
        background: rgba(15, 23, 42, 0.4);
    }
</style>
