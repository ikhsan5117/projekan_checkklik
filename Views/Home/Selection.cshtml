@{
    ViewData["Title"] = "Pilih Layanan";
    Layout = "_Layout";
}

<div class="selection-container">
    <div class="selection-header animate-fade-in">
        <h1 class="welcome-text">Selamat Datang, <span class="user-name">@(User.FindFirst("FullName")?.Value ?? User.Identity?.Name)</span></h1>
        <p class="subtitle">Silakan pilih layanan yang ingin Anda akses hari ini</p>
    </div>

    <!-- Machine Visual -->
    <div class="machine-hero animate-fade-in">
        <div class="hero-frame">
             <div class="glass-overlay"></div>
             <!-- Silakan Bapak klik kanan gambar yang tadi Bapak kirim, lalu simpan sebagai 'industrial_machine.png' di folder wwwroot/images -->
             <img src="/images/industrial_machine.png" alt="Futuristic Machine" class="hero-img" onerror="this.style.display='none'; document.querySelector('.hero-frame').classList.add('no-image');">
             <div class="hologram-effect"></div>
             <div class="scanning-line"></div>
        </div>
    </div>

    <div class="selection-list">
        <!-- Daily Inspection Card -->
        <a href="@Url.Action("Index", "Inspection")" class="horizontal-card blue animate-slide-left" style="--delay: 0.1s">
            <div class="card-glow"></div>
            <div class="card-bg-icon">
                <i class="ph-clipboard-text"></i>
            </div>
            <div class="card-icon">
                <i class="ph-clipboard-text"></i>
            </div>
            <div class="card-body">
                <h3>DAILY CHECKLIST</h3>
                <p>Lakukan pengecekan rutin mesin</p>
            </div>
            <div class="card-arrow">
                <i class="ph-caret-right-bold"></i>
            </div>
        </a>

        <!-- SCW Card -->
        <a href="@Url.Action("Index", "SCW")" class="horizontal-card red animate-slide-left" style="--delay: 0.2s">
            <div class="card-glow"></div>
            <div class="card-bg-icon">
                <i class="ph-warning-circle"></i>
            </div>
            <div class="card-icon">
                <i class="ph-warning-circle"></i>
            </div>
            <div class="card-body">
                <h3>INPUT SCW</h3>
                <p>Laporan Stop Call Work jika ada problem</p>
            </div>
            <div class="card-arrow">
                <i class="ph-caret-right-bold"></i>
            </div>
        </a>
    </div>
</div>

<style>
    .selection-container {
        min-height: calc(100vh - 100px);
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem 1rem;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    .selection-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .welcome-text {
        font-size: clamp(1.5rem, 4vw, 2.2rem);
        font-weight: 800;
        color: #fff;
        margin-bottom: 0.5rem;
    }

    .user-name {
        background: linear-gradient(90deg, #60a5fa, #c084fc);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .subtitle {
        color: #94a3b8;
        font-size: 0.95rem;
        font-weight: 500;
    }

    /* Machine Visual Style */
    .machine-hero {
        width: 100%;
        max-width: 320px;
        aspect-ratio: 1 / 1;
        margin-bottom: 4rem;
        perspective: 1000px;
    }

    .hero-frame {
        position: relative;
        width: 100%;
        height: 100%;
        border-radius: 20px;
        overflow: hidden;
        border: 1px solid rgba(96, 165, 250, 0.2);
        background: radial-gradient(circle at center, rgba(30, 41, 59, 0.4) 0%, rgba(15, 23, 42, 0.8) 100%);
        box-shadow: 
            0 20px 50px rgba(0,0,0,0.6),
            inset 0 0 30px rgba(96, 165, 250, 0.1);
    }

    .hero-frame.no-image {
        background: linear-gradient(135deg, rgba(30, 41, 59, 0.8) 0%, rgba(15, 23, 42, 0.9) 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-frame.no-image::after {
        content: 'FUTURISTIC SYSTEM INTERFACE';
        font-family: 'JetBrains Mono', monospace;
        font-size: 0.8rem;
        color: rgba(96, 165, 250, 0.3);
        letter-spacing: 5px;
    }

    .hero-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: 0.8;
        filter: saturate(1.2) contrast(1.1);
    }

    /* Hologram placeholder effect if image missing */
    .hero-img[src$="industrial_machine.png"]:not([src*="."]) {
        opacity: 0;
    }

    .hologram-effect {
        position: absolute;
        inset: 0;
        background: repeating-linear-gradient(
            0deg,
            rgba(96, 165, 250, 0.03) 0px,
            rgba(96, 165, 250, 0.03) 1px,
            transparent 1px,
            transparent 2px
        );
        pointer-events: none;
    }

    .scanning-line {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, transparent, #60a5fa, transparent);
        box-shadow: 0 0 15px #60a5fa, 0 0 30px rgba(96, 165, 250, 0.5);
        animation: scan 4s infinite ease-in-out;
        z-index: 5;
    }

    @@keyframes scan {
        0% { top: -4px; opacity: 0; }
        10% { opacity: 1; }
        90% { opacity: 1; }
        100% { top: 100%; opacity: 0; }
    }

    /* Horizontal Card Style */
    .selection-list {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .horizontal-card {
        text-decoration: none;
        position: relative;
        display: flex;
        align-items: center;
        padding: 1.5rem 2rem;
        background: rgba(30, 41, 59, 0.4);
        backdrop-filter: blur(15px);
        -webkit-backdrop-filter: blur(15px);
        border: 1px solid rgba(255, 255, 255, 0.08);
        border-radius: 20px;
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        overflow: hidden;
    }

    .horizontal-card:hover {
        background: rgba(30, 41, 59, 0.6);
        border-color: rgba(96, 165, 250, 0.3);
        transform: translateX(12px) translateY(-2px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.4);
    }

    /* Background Icon Effect */
    .card-bg-icon {
        position: absolute;
        right: 8%;
        top: 50%;
        transform: translateY(-50%) scale(3);
        font-size: 4rem;
        opacity: 0.12;
        transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
        pointer-events: none;
        z-index: 0;
    }

    .blue .card-bg-icon { color: #60a5fa; }
    .red .card-bg-icon { color: #f87171; }

    .horizontal-card:hover .card-bg-icon {
        opacity: 0.2;
        transform: translateY(-50%) scale(3.5) rotate(-10deg);
        right: 5%;
    }

    .card-icon {
        width: 64px;
        height: 64px;
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        margin-right: 1.5rem;
        flex-shrink: 0;
        position: relative;
        z-index: 1;
        transition: all 0.4s ease;
    }

    .blue .card-icon { 
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.15), rgba(37, 99, 235, 0.1)); 
        color: #60a5fa;
        border: 1px solid rgba(59, 130, 246, 0.3);
        box-shadow: 0 0 15px rgba(59, 130, 246, 0.1);
    }
    
    .red .card-icon { 
        background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(220, 38, 38, 0.1)); 
        color: #f87171;
        border: 1px solid rgba(239, 68, 68, 0.3);
        box-shadow: 0 0 15px rgba(239, 68, 68, 0.1);
    }

    .horizontal-card:hover .card-icon {
        transform: scale(1.1);
        filter: brightness(1.2);
    }

    .card-body {
        flex-grow: 1;
        text-align: left;
        position: relative;
        z-index: 1;
    }

    .card-body h3 {
        color: #fff;
        font-size: 1.25rem;
        font-weight: 800;
        margin-bottom: 0.25rem;
        letter-spacing: 0.5px;
    }

    .card-body p {
        color: #94a3b8;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .card-arrow {
        color: #475569;
        font-size: 1.25rem;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .horizontal-card:hover .card-arrow {
        color: #fff;
        transform: translateX(5px);
    }

    .card-glow {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 0px 50%, rgba(96, 165, 250, 0.15), transparent 50%);
        opacity: 0;
        transition: opacity 0.4s;
    }

    .horizontal-card:hover .card-glow { opacity: 1; }

    /* Animations */
    .animate-slide-left {
        animation: slideLeft 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        animation-delay: var(--delay);
        opacity: 0;
    }

    @@keyframes slideLeft {
        from { opacity: 0; transform: translateX(-30px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .animate-fade-in { animation: fadeIn 1s ease-out forwards; }
    @@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

    @@media (max-width: 640px) {
        .horizontal-card { padding: 1.25rem; }
        .card-icon { width: 52px; height: 52px; font-size: 1.6rem; margin-right: 1.25rem; }
        .card-body h3 { font-size: 1.1rem; }
        .card-body p { font-size: 0.85rem; }
        .machine-hero { height: 180px; }
        .card-bg-icon { font-size: 3rem; }
    }
</style>
