@using AMRVI.Services
@inject PlantService PlantService
@{
    ViewData["Title"] = "Smart Import Velasto";
    var plant = PlantService.GetPlantName();
}

<div class="dashboard-hero" style="padding: 1.5rem; margin-bottom: 2rem; background: rgba(15, 23, 42, 0.6); border-radius: 16px; border: 1px solid rgba(255,255,255,0.1); backdrop-filter: blur(12px);">
    <div class="hero-main" style="display: flex; justify-content: space-between; align-items: center;">
        <div>
            <h1 class="hero-title" style="font-size: 1.8rem; margin: 0;">SMART <span class="glow-text" style="color: #22d3ee;">IMPORT VELASTO</span></h1>
            <p class="hero-subtitle" style="color: #94a3b8; margin-top: 0.5rem;">Upload file Excel format asli Velasto untuk import mesin & checklist sekaligus.</p>
        </div>
        <div class="plant-badge" style="background: rgba(34, 211, 238, 0.1); border: 1px solid rgba(34, 211, 238, 0.3); padding: 0.5rem 1rem; border-radius: 20px; color: #22d3ee; font-weight: 700; font-size: 0.8rem; letter-spacing: 0.1em;">
            TARGET PLANT: @plant
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="bento-card" style="padding: 2.5rem; border: 1px solid rgba(255,255,255,0.05); background: rgba(30, 41, 59, 0.5); position: relative; overflow: hidden;">
            <div style="position: absolute; top: 0; right: 0; padding: 1rem; opacity: 0.1;">
                <i class="ph-file-xls" style="font-size: 8rem; color: #22d3ee;"></i>
            </div>

            <div style="position: relative; z-index: 1;">
                <h3 style="color: #f1f5f9; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.75rem;">
                    <i class="ph-upload-simple-bold" style="color: #22d3ee;"></i>
                    Pilih File Excel
                </h3>
                
                <div class="import-instructions" style="background: rgba(0,0,0,0.2); border-left: 4px solid #22d3ee; padding: 1rem; border-radius: 0 8px 8px 0; margin-bottom: 2rem;">
                    <ul style="color: #94a3b8; font-size: 0.9rem; margin: 0; padding-left: 1.2rem;">
                        <li>Sistem akan memproses <strong>SEMUA SHEET</strong> di dalam file Excel.</li>
                        <li>Format sel (No. Mesin, Nama Mesin) harus sesuai standar perusahaan.</li>
                        <li>Item checklist duplikat akan dilewati otomatis.</li>
                        <li>Pastikan Plant Anda saat ini (@plant) sesuai dengan isi file.</li>
                    </ul>
                </div>

                <form id="velastoImportForm" enctype="multipart/form-data">
                    <div class="file-upload-wrapper" style="border: 2px dashed rgba(255,255,255,0.1); border-radius: 12px; padding: 3rem; text-align: center; transition: all 0.3s; cursor: pointer; background: rgba(15, 23, 42, 0.3);" onmouseover="this.style.borderColor='#22d3ee'; this.style.background='rgba(34, 211, 238, 0.05)';" onmouseout="this.style.borderColor='rgba(255,255,255,0.1)'; this.style.background='rgba(15, 23, 42, 0.3)';" onclick="document.getElementById('excelFile').click()">
                        <input type="file" id="excelFile" name="file" accept=".xlsx" style="display: none;" onchange="updateFileName(this)" />
                        <i class="ph-cloud-arrow-up" style="font-size: 3.5rem; color: #22d3ee; margin-bottom: 1rem;"></i>
                        <p id="fileName" style="color: #94a3b8; margin: 0;">Seret file ke sini atau klik untuk memilih</p>
                        <p style="font-size: 0.75rem; color: #64748b; margin-top: 0.5rem;">Hanya file .xlsx (Max 10MB)</p>
                    </div>

                    <div style="margin-top: 2rem; display: flex; justify-content: flex-end; gap: 1rem;">
                        <a href="/ChecklistData" class="cyber-btn-sm" style="background: rgba(255,255,255,0.05); color: #94a3b8; text-decoration: none; display: flex; align-items: center; border: 1px solid rgba(255,255,255,0.1);">Batal</a>
                        <button type="submit" id="btnSubmit" class="cyber-btn-sm" style="background: linear-gradient(90deg, #0ea5e9, #22d3ee); color: #fff; font-weight: 700; border: none; min-width: 150px;">
                            <i class="ph-rocket-launch-bold"></i> START IMPORT
                        </button>
                    </div>
                </form>

                <div id="importStatus" style="display: none; margin-top: 2rem;">
                    <div class="progress-bar-wrapper" style="height: 10px; background: rgba(255,255,255,0.05); border-radius: 5px; overflow: hidden; margin-bottom: 1rem;">
                        <div id="progressBar" style="width: 0%; height: 100%; background: linear-gradient(90deg, #22d3ee, #818cf8); transition: width 0.3s;"></div>
                    </div>
                    <p id="statusText" style="color: #94a3b8; font-size: 0.85rem; text-align: center;">Menyiapkan data...</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .glow-text { text-shadow: 0 0 10px rgba(34, 211, 238, 0.5); }
    .cyber-btn-sm { padding: 0.75rem 1.5rem; border-radius: 8px; font-size: 0.85rem; transition: all 0.2s; cursor: pointer; }
    .cyber-btn-sm:hover { transform: translateY(-2px); box-shadow: 0 5px 15px rgba(0,0,0,0.3); }
    .cyber-btn-sm:disabled { opacity: 0.5; cursor: not-allowed; transform: none; }
</style>

@section Scripts {
    <script>
        function updateFileName(input) {
            const fileName = input.files[0] ? input.files[0].name : "Seret file ke sini atau klik untuk memilih";
            document.getElementById('fileName').innerText = fileName;
            document.getElementById('fileName').style.color = input.files[0] ? "#f1f5f9" : "#94a3b8";
        }

        document.getElementById('velastoImportForm').addEventListener('submit', async (e) => {
            e.preventDefault();
            const fileInput = document.getElementById('excelFile');
            if (!fileInput.files[0]) {
                alert("Silakan pilih file terlebih dahulu!");
                return;
            }

            const formData = new FormData();
            formData.append('file', fileInput.files[0]);

            const btn = document.getElementById('btnSubmit');
            const statusDiv = document.getElementById('importStatus');
            const pBar = document.getElementById('progressBar');
            const sText = document.getElementById('statusText');

            btn.disabled = true;
            statusDiv.style.display = 'block';
            pBar.style.width = '30%';
            sText.innerText = "Sistem sedang membaca file Excel...";

            try {
                const response = await fetch('/ChecklistData/SmartImportVelasto', {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                
                if (result.success) {
                    pBar.style.width = '100%';
                    pBar.style.background = '#10b981';
                    sText.style.color = '#10b981';
                    sText.innerText = result.message;
                    
                    setTimeout(() => {
                        window.location.href = '/ChecklistData';
                    }, 2000);
                } else {
                    pBar.style.width = '100%';
                    pBar.style.background = '#ef4444';
                    sText.style.color = '#ef4444';
                    sText.innerText = "Error: " + result.message;
                    btn.disabled = false;
                }
            } catch (err) {
                pBar.style.background = '#ef4444';
                sText.innerText = "Koneksi terputus: " + err.message;
                btn.disabled = false;
            }
        });
    </script>
}
